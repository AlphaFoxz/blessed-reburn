{
  "include": [
    "*.ts",
    "src/*",
    "src/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "#core": [
        "../core/src"
      ],
      "#core/*": [
        "../core/src/*"
      ],
      "#cli": [
        "../cli/src"
      ],
      "#cli/*": [
        "../cli/src/*"
      ],
      "#plugin": [
        "../plugin/src"
      ],
      "#plugin/*": [
        "../plugin/src/*"
      ]
    }
  }
}