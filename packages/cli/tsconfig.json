{
  "include": [
    "src/*",
    "src/**/*",
    "scripts/*",
    "./globals.d.ts"
  ],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "paths": {
      "#core": [
        "../core/src"
      ],
      "#core/*": [
        "../core/src/*"
      ],
      "#cli": [
        "./src"
      ],
      "#cli/*": [
        "./src/*"
      ],
      "#plugin": [
        "../plugin/src"
      ],
      "#plugin/*": [
        "../plugin/src/*"
      ]
    }
  }
}